  person(135px, -1160px)
    

  .navbar-garlic .navbar-brand
    width 39px
    background-size cover

.mobile
  html, body
    height auto
  #people
    display none
  .moleskine
    display none
  .info, .moleskine
    transform translateX(0) !important
    transition 0s linear !important
  .info
    padding 20px !important
  #body
    margin: 0;
    left: 0;
    top: 0;
    position: relative;
    width: auto;
    height: auto;
    .info
      width auto
      text-align center
      #logo
        margin auto
  .share, .arrow-left, .arrow-right, .jack-attack
    display none

  .person-info
    background-color: #ddd;
    border-bottom: 1px solid #bbb;
    padding: 26px;
    color #777
    font-size 13px
    .name
      font-weight bold
      color #333

  .mobile-show img
    max-width 100%
    min-height 100px
  .mini-person
    position relative
    display block
    text-decoration none
  .mini-person span
    transition 0.3s ease-out
    image '../img/people.png'
    display block
    margin auto
    position absolute
    right 10px
    bottom 0px
    height 83px
    background-size auto 83px !important
  .mini-person.chase span
    right 23px
  .mini-person.chris span
    right 14px

.jack-attack
  text-align: center;
  margin-top: -28px;
  color: #fff;
  font-size: 13px;
  transform translateY(20px)
  opacity 0
  transition 0.3s ease-out
  &.on
    transform translateY(0)
    opacity 1
  a
    color rgba(255,255,255,0.6)
    &:hover
      text-decoration none
      color #fff

.amazon
  z-index 10
  position absolute
  border 2px solid rgba(100,100,100,0.5442)
  text-indent -10000px
  background-color rgba(0,0,0,0.05)
  opacity 0
  transition opacity 0.3s ease-out
  &:hover
    opacity 1
  &.book-spirit
    transform rotate(-2deg)
    width 310px
    height 110px
    left 20px
    top 98px
  &.book-score
    transform rotate(0deg)
    width: 315px;
    height: 150px;
    left: 20px;
    top: 198px;
  &.music
    transform rotate(0deg)
    width: 80px;
    height: 40px;
    left: 10px;
    top: 10px;

.buy
  margin-top 20px
  display block
  color #fff
  background-color rgba(0,0,0,0.1)
  padding 10px
  border-radius 5px
  box-shadow 1px 1px rgba(255,255,255,0.1), 1px 1px rgba(0,0,0,0.2) inset
  text-shadow 1px 1px rgba(0,0,0,0.3)
  &:hover
    text-decoration none
    color #fff
    background-color rgba(0,0,0,0.2)
    span
      color rgba(255,255,255,0.8)
  span
    color rgba(255,255,255,0.5)
    display block

